.detail-container {
    height: 400rpx;
    filter: blur(40rpx);
    opacity: 0.4;
}
.detail-mask {
    z-index: -1;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 400rpx;
    background-color: #333;
}
.detail-info {
    display: flex;
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 400rpx;
    padding: 20rpx;
    box-sizing: border-box;
}
.detail-img {
    width: 280rpx;
    height: 100%;
    margin-right: 24rpx;
}
.detail {
    flex: 1;
    line-height: 60rpx;
}
.detail view {
    font-size: 24rpx;
    color: #fff;
}
.detail .detail-name {
    font-size: 40rpx;
    font-weight: 700;
}
.detail .detail-sorce {
    font-size: 36rpx;
    font-weight: 700;
    color: #ffcc00;
}
.desc {
    padding: 20rpx;
    line-height: 40rpx;
    text-indent: 48rpx;
    font-size: 24rpx;
    color: #555;
}
.comment {
    padding: 10rpx;
}
.comment-content {
    border: 1px solid #ccc;
    width: 100%;
    box-sizing: border-box;
    font-size: 32rpx;
    border-radius: 8rpx;
    padding: 20rpx;
}
.comment-image image {
    width: 200rpx;
    height: 200rpx;
    margin: 10rpx;
}
.comment-img {
    width: 200rpx;
    height: 200rpx;
    margin-right: 20rpx;
}